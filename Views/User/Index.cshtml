@model IEnumerable<MyMvcApp.Models.User>
@{
    ViewBag.Title = "Index";
    var searchString = Context.Request.Query["searchString"].ToString();
}
<h2>Index</h2>
<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" class="form-control mr-2" placeholder="Search by name or email" value="@searchString" />
    <button type="submit" class="btn btn-primary">Search</button>
    <a class="btn btn-secondary ml-2" href="@Url.Action("Index")">Clear</a>
</form>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "User")">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
            <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.Id })">Details</a>
            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
        </td>
    </tr>
}
</table>